{
    "manifest_version": 3,
    "name": "NIRA-XT Guardian Connect Agent",
    "version": "1.0.0",
    "description": "Securely connects your browser to NIRA-XT Guardian DNS with AI-powered safety features.",
    "permissions": [
        "proxy",
        "storage",
        "tabs"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "externally_connectable": {
        "matches": [
            "https://*.mydomain.com/*",
            "http://localhost:3000/*",
            "http://127.0.0.1:3000/*"
        ]
    }
}